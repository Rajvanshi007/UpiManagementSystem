package com.tcs.controller;

import java.util.List;
import java.util.Map;

import org.springframework.security.core.Authentication;
import org.springframework.security.core.authority.SimpleGrantedAuthority;
import org.springframework.web.bind.annotation.*;

import com.tcs.model.Account;
import com.tcs.model.User;
import com.tcs.service.AccountService;
import com.tcs.service.UserService;
import com.tcs.util.JwtUtil;

@RestController
@RequestMapping("/api/users")
@CrossOrigin(origins = "http://localhost:4200")
public class UserController {

    private final UserService userService;
    private final AccountService accountService;
    private final JwtUtil jwtUtil;

    public UserController(UserService u, AccountService a, JwtUtil j) {
        this.userService = u;
        this.accountService = a;
        this.jwtUtil = j;
    }

    // SIGNUP
    @PostMapping
    public User signup(@RequestBody User user) {

        User saved = userService.saveUser(user);

        Account savings = new Account();
        savings.setType("SAVINGS");
        savings.setBalance(0);
        savings.setUser(saved);
        accountService.saveAccount(savings);

        Account current = new Account();
        current.setType("CURRENT");
        current.setBalance(0);
        current.setUser(saved);
        accountService.saveAccount(current);

        return saved;
    }

    // USER LOGIN
    @PostMapping("/login")
    public Map<String,Object> login(@RequestBody User user) {

        User u = userService.login(
            user.getUsername(), user.getPassword()
        ).orElseThrow(() -> new RuntimeException("Invalid credentials"));

        return Map.of(
            "token", jwtUtil.generateToken(u.getUsername(),"USER"),
            "user", u
        );
    }

    // ADMIN LOGIN
    @PostMapping("/admin/login")
    public Map<String,String> adminLogin(@RequestBody Map<String,String> b) {

        if ("admin".equals(b.get("username")) &&
            "admin123".equals(b.get("password"))) {

            return Map.of(
                "token", jwtUtil.generateToken("admin","ADMIN")
            );
        }

        throw new RuntimeException("Invalid admin credentials");
    }
}

